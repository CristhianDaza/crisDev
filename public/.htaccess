# Use HTTPS canonical domain
RewriteEngine On
RewriteCond %{HTTPS} !=on [OR]
RewriteCond %{HTTP_HOST} !^cris-dev\.com$ [NC]
RewriteRule ^ https://cris-dev.com%{REQUEST_URI} [L,R=301]

# Security headers
<IfModule mod_headers.c>
Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"
Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https://cris-dev.com; connect-src 'self'; frame-ancestors 'self'; base-uri 'self'; form-action 'self'"
Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-Content-Type-Options "nosniff"
Header always set Referrer-Policy "strict-origin-when-cross-origin"
Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# Block directory browsing of Nuxt internals but allow hashed assets
RewriteRule ^_nuxt/?$ - [F,L]
RewriteRule ^_i18n/?$ - [F,L]

# Serve existing files and directories normally
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Custom 404 page for unknown routes
ErrorDocument 404 /404.html
RewriteRule ^.*$ /404.html [L,R=404]
